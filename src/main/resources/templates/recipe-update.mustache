{{>layout/header}}

<h1>레시피 수정</h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="id">글 번호</label>
                <input type="text" class="form-control" id="id" value="{{recipe.id}}" readonly>
            </div>
            <div class="form-group">
                <label for="title">제목</label>
                <input type="text" class="form-control" id="title" value="{{recipe.title}}">
            </div>
            <div class="form-group">
                <label for="author"> 작성자 </label>
                <input type="text" class="form-control" id="author" value="{{recipe.author}}" readonly>
            </div>
            <div class="form-group">
                <label for="portion"> 몇인분 </label>
                <input type="text" class="form-control" id="portion" value="{{recipe.portion}}" >
            </div>
            <div class="form-group">
                <label for="cookingTime"> 소요시간 </label>
                <input type="text" class="form-control" id="cookingTime" value="{{recipe.cookingTime}}" >
            </div>
            <div class="form-group">
                <label for="ingredients"> 재료 </label>
                <input type="text" class="form-control" id="ingredients" value="{{recipe.ingredients}}" >
            </div>
            <div class="form-group">
                <label for="content"> 내용 </label>
                <textarea class="form-control" id="content">{{recipe.content}}</textarea>
            </div>
        </form>
        <a href="/" role="button" class="btn btn-secondary">취소</a>
        <button type="button" class="btn btn-primary" id="btn-update">수정 완료</button>
        <button type="button" class="btn btn-danger" id="btn-delete">삭제</button>
    </div>
</div>

{{>layout/footer}}